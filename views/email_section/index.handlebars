<head>
  <link rel="stylesheet" type="text/css" href="/css/emails.css">
</head>
  <table class="table table-responsive">
    <thead>
      <tr>
        <th>Link</th>
        <th>From</th>
        <th>Subject</th>
        <!-- <th>Body</th> -->
        <th>Date</th>
        <th>Files</th>
      </tr>
    </thead>
    <tbody>
      <!-- example to create a row -->
      <!-- <tr>
        <td>Juldy</td>
        <td>Dooley</td>
        <td>july@example.com</td>
      </tr> -->
      {{#each emails}}
        <tr>
          <td><a href="emails/{{this.message_id}}">Link</td>
          <td>{{this.from}}</td>
          <td>{{this.subject}}</td>
          <!-- <td>{{this.body}}</td> -->
          <td>{{this.date}}</td>
          <td>{{this.num_attach}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
