<head>
  <link rel="stylesheet" type="text/css" href="/css/file_section.css">
</head>
  <table class="table table-responsive">
    <thead>
      <tr>
        <th>Direct Download</th>
        <th>File Preview</th>
        <th>File Type</th>
      </tr>
    </thead>
    <tbody>
      <!-- example to create a row -->
      <!-- <tr>
        <td>Juldy</td>
        <td>Dooley</td>
        <td>july@example.com</td>
      </tr> -->
      {{#each attachments}}
        <tr>
          <td>
            <a href="attachments/{{this.message_id}}/{{this.attachment_id}}/download/{{this.file_name}}" target="_blank">
              Direct Download
            </a>
          </td>
          <td>
            <a href="attachments/{{this.message_id}}/{{this.attachment_id}}/{{this.file_name}}" target="_blank">
              {{this.file_name}}
            </a>
          </td>
          <td>{{this.file_type}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
